<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <Button
        android:id="@+id/sign_up_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_find_button"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="160dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="160dp"
        android:background="#00ff0000"
        android:fontFamily="@font/theletssmilel"
        android:text="회원가입" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="218dp"
        android:layout_height="31dp"
        android:layout_below="@+id/TextView"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80sp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="80sp"
        android:background="@drawable/longblank"
        android:ems="10"
        android:fontFamily="@font/theletssmilel"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/TextView"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="112dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/longblank"
        android:ems="10"
        android:fontFamily="@font/theletssmilel"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/TextView"
        android:layout_alignRight="@id/textView4"
        android:layout_alignBottom="@+id/TextView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="63dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/theletssmilem"
        android:paddingEnd="5dp"
        android:text="E-mail"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_alignTop="@+id/editText1"
        android:layout_alignBottom="@+id/editText1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="6dp"
        android:fontFamily="@font/theletssmilem"
        android:paddingEnd="5dp"
        android:text="PW"
        android:textSize="18dp" />

    <Button
        android:id="@+id/password_find_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_button"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="160dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="160dp"
        android:background="#00ff0000"
        android:fontFamily="@font/theletssmilel"
        android:text="비밀번호 찾기" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="160dp"
        android:layout_height="37dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="336dp"
        android:layout_marginRight="160dp"
        android:background="@drawable/graybutton"
        android:fontFamily="@font/theletssmilel"
        android:text="로그인" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="138dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="121dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="119dp"
        app:srcCompat="@drawable/logo" />

</RelativeLayout>