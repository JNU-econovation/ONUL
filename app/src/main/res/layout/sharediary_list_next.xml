<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:weightSum="1793">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="354"
        android:orientation="vertical"
        android:weightSum="354">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="217"
            android:visibility="invisible"/>
        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="94"
            app:srcCompat="@drawable/logo" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="43"
            android:visibility="invisible"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="60"
        android:orientation="horizontal"
        android:weightSum="960">


        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="155"
            android:visibility="invisible" />


        <TextView
            android:id="@+id/diaryname"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="300"
            android:fontFamily="@font/theletssmiler"
            android:text="우정일기"
            android:textColor="#2D650A"
            android:textSize="20sp" />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="293"
            android:visibility="invisible" />

        <Button
            android:id="@+id/day_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="60"
            android:background="@drawable/x" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="155"
            android:visibility="invisible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="900"
        android:orientation="horizontal"
        android:weightSum="960">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:visibility="invisible"/>


        <androidx.constraintlayout.widget.ConstraintLayout

            android:id="@+id/calendarView"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:background="@drawable/emoji_show"
            android:layout_weight="960
"
            android:fontFamily="@font/theletssmilel"
            app:mcv_selectionColor="#2d650a"
            app:mcv_showOtherDates="all" >

            <Button
                android:id="@+id/button"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/smile"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.248"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.71" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:visibility="invisible"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="153"
        android:orientation="vertical"
        android:weightSum="153">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="25"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="40"
            android:orientation="horizontal"
            android:weightSum="960">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="143"
                android:visibility="invisible" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="40"
                android:background="@drawable/color_kim"
                android:layout_gravity="center"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:visibility="invisible"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="97"
                android:fontFamily="@font/theletssmiler"
                android:text="김성혁" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="670"
                android:visibility="invisible"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="40"
            android:orientation="horizontal"
            android:weightSum="960">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="143"
                android:visibility="invisible"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="40"
                android:background="@drawable/color_lee"
                android:layout_gravity="center"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:visibility="invisible"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="97"
                android:fontFamily="@font/theletssmiler"
                android:text="주동혁" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="670"
                android:visibility="invisible"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="33"
            android:visibility="invisible"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="89"
        android:orientation="horizontal"
        android:weightSum="960">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="129"
            android:visibility="invisible" />

        <Button
            android:id="@+id/button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="702"
            android:background="@drawable/list_kim" />




        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="129"
            android:visibility="invisible" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="237"
        android:visibility="invisible"/>


</LinearLayout>